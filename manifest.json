{
  "manifest_version": 2,
  "name": "Brisk Ventures - Trello-like Board for Thunderbird",
  "version": "1.0",
  "description": "Testing extension for Thunderbird",
  "icons": {
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png"
  },
  "applications": {
    "gecko": {
      "id": "trello-board@example.com",
      "strict_min_version": "78.0"
    }
  },
  "background": {
    "scripts": ["background.js", "tasks.js"]
  },
  "browser_action": {
    "default_title": "Tasks Fetcher",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false,
    "browser_style": true
  },
  "permissions": [
    "https://dummyjson.com/*",
    "tabs",
    "accountsRead",
    "accountsFolders",
    "messagesRead",
    "messagesModify",
    "messagesImport",
    "messagesMove",
    "notifications",
    "storage"
  ]
}
